{
	"name"       : "johnbillion/revisions-digest",
	"description": "Digests of revisions.",
	"homepage"   : "https://github.com/johnbillion/revisions-digest",
	"type"       : "wordpress-plugin",
	"license"    : "GPL-2.0+",
	"authors"    : [
		{
			"name"    : "John Blackbourn",
			"homepage": "https://johnblackbourn.com/"
		}
	],
	"support": {
		"issues": "https://github.com/johnbillion/revisions-digest/issues",
		"forum": "https://wordpress.org/support/plugin/revisions-digest",
		"source": "https://github.com/johnbillion/revisions-digest"
	},
	"require": {
		"php": ">=7.1",
		"composer/installers": "^1 || ^2"
	},
	"require-dev" : {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpunit/phpunit": "^9.0 || ^10.0",
		"wp-coding-standards/wpcs": "^3.1"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"lint": "phpcs",
		"lint:fix": "phpcbf"
	}
}
