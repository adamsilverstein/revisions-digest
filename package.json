{
  "name": "revisions-digest",
  "version": "0.1.0",
  "description": "A WordPress plugin which generates digests of changes to content via their revisions.",
  "private": true,
  "scripts": {
    "lint:js": "eslint assets/js/",
    "lint:js:fix": "eslint assets/js/ --fix",
    "lint:css": "stylelint 'assets/css/**/*.css'",
    "lint:css:fix": "stylelint 'assets/css/**/*.css' --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@wordpress/eslint-plugin": "^21.4.0",
    "@wordpress/stylelint-config": "^23.4.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "stylelint": "^16.12.0"
  },
  "lint-staged": {
    "*.php": "composer lint",
    "assets/js/**/*.js": "eslint --fix",
    "assets/css/**/*.css": "stylelint --fix"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "GPL-2.0-or-later"
}
